{% extends ['MLPlatformBundle::layout.html.twig', 'MLPlatformBundle::index.html.twig'] %}


{% block title %}
  Lecture d'une annonce - {{ parent() }}
{% endblock %}

    {% block map %}{% endblock %}

{% block mlplatform_body %}

  <h2>{{ advert.title }}</h2>
  <i>Par {{ advert.author }}, le {{ advert.date|date('d/m/Y') }}</i>

  <div class="well">
    {{ advert.content }}
  </div>

  <p>
    <a href="{{ path('ml_platform_home') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour Ã  la liste
    </a>
    <a href="{{ path('ml_platform_edit', {'id': advert.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-edit"></i>
